<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CityScapeApp.Views.Controls.Car.CarContent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="CarNameLabel" Grid.Column="0"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label x:Name="CarCostLabel" Grid.Row="1" Grid.Column="1"
           VerticalOptions="Center" 
           HorizontalOptions="Center" />
        <Image x:Name="CarImage"  Grid.Row="1" Grid.Column="0"  />
        <Button x:Name="buyButton" Text="Buy" Grid.Row="1" Grid.Column="1" Clicked="BuyButtxon_Clicked"/>
    </Grid>
   
</ContentView>
